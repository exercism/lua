#! /usr/bin/env bash

RESULT=0

rm -r test-exercises
cp -r exercises/practice test-exercises
cd test-exercises

for i in *
do
  if test -d "$i"
  then
    echo Testing $i...
    cd $i
    mv example.lua $i.lua
    busted --verbose
    if [ $? -ne 0 ]; then
      RESULT=1
    fi
    cd ..
  fi
done

exit $RESULT
